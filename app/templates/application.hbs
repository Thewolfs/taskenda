<div class="container calendar">
    <div class="calendar-header">
    {{#each weekDays as |day|}}
        <div class="col-md-2" style="width: 14.2857143%">
            <div class="row">
                <div class="col-xs-12 text-center calendar-cell">
                    {{format-date day.day format="ddd d/mm"}}
                </div>
            </div>
        </div>
    {{/each}}
    </div>
    <div class="row calendar-body">
    {{#each weekDays as |day|}}
        <div class="col-md-2" style="width: 14.2857143%">
            {{#each (times 48)}}
            <div class="row">
                <div class="col-xs-12 text-center calendar-cell">
                    {{format-date day.day format="d"}}
                </div>
            </div>
            {{/each}}
        </div>
    {{/each}}
    </div>
</div>
